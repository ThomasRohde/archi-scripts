<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JArchi Console</title>
    <link href="/output.css" rel="stylesheet">
    <style>
        #consoleOutput {
            font-family: monospace;
            white-space: pre-wrap;
            word-wrap: break-word;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">JArchi Console</h1>
        <div id="consoleOutput" class="bg-white shadow-md rounded-lg p-4 overflow-auto h-[calc(100vh-8rem)]">
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const consoleOutput = document.getElementById('consoleOutput');

        // Function to append content to the console
        function appendToConsole(htmlContent) {
            const contentDiv = document.createElement('div');
            contentDiv.innerHTML = htmlContent;
            consoleOutput.appendChild(contentDiv);
            consoleOutput.scrollTop = consoleOutput.scrollHeight;
        }

        // Display initial content
        <% initialContent.forEach(function(content) { %>
            appendToConsole(`<%- content %>`);
        <% }); %>

        socket.on('newConsoleContent', (htmlContent) => {
            appendToConsole(htmlContent);
        });
    </script>
</body>
</html>