  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "json-formatter-js": "^2.5.17",
    "luxon": "^3.5.0",
    "marked": "^14.0.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "tailwindcss": "^3.4.7"
  }
