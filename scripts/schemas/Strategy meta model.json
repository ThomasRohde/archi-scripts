    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Stakeholder",
              "Driver",
              "Assessment",
              "Goal",
              "Outcome",
              "Principle",
              "Requirement",
              "Constraint",
              "Course of Action",
              "Capability",
              "Resource",
              "Value Stream",
              "Value"
            ]
          },
          "label": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "label"
        ]
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "enum": [
              "Stakeholder",
              "Driver",
              "Assessment",
              "Goal",
              "Outcome",
              "Principle",
              "Requirement",
              "Constraint",
              "Course of Action",
              "Capability",
              "Resource",
              "Value Stream",
              "Value"
            ]
          },
          "target": {
            "type": "string",
            "enum": [
              "Stakeholder",
              "Driver",
              "Assessment",
              "Goal",
              "Outcome",
              "Principle",
              "Requirement",
              "Constraint",
              "Course of Action",
              "Capability",
              "Resource",
              "Value Stream",
              "Value"
            ]
          },
          "type": {
            "type": "string",
            "enum": [
              "realization",
              "association",
              "assignment",
              "serving"
            ]
          }
        },
        "required": [
          "source",
          "target",
          "type"
        ]
      }
    }
  },
  "required": [
    "elements",
    "relationships"
  ],
  "example": {
    "elements": [
      {
        "type": "Stakeholder",
        "label": "Stakeholder"
      },
      {
        "type": "Driver",
        "label": "Driver"
      },
      {
        "type": "Assessment",
        "label": "Assessment"
      },
      {
        "type": "Goal",
        "label": "Goal"
      },
      {
        "type": "Outcome",
        "label": "Outcome"
      },
      {
        "type": "Principle",
        "label": "Principle"
      },
      {
        "type": "Requirement",
        "label": "Requirement"
      },
      {
        "type": "Constraint",
        "label": "Constraint"
      },
      {
        "type": "Course of Action",
        "label": "Course of Action"
      },
      {
        "type": "Capability",
        "label": "Capability"
      },
      {
        "type": "Resource",
        "label": "Resource"
      },
      {
        "type": "Value Stream",
        "label": "Value Stream"
      },
      {
        "type": "Value",
        "label": "Value"
      }
    ],
