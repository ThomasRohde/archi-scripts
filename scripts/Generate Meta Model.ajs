        ],
        "additionalProperties": false,
        "anyOf": [
          { "type" : "object",
            "properties": {
              "type": {
                "type" : "string",
                "enum": ["realization-relationship"]
              },
              "source": {
                "enum": [
                  "goal"
                ]
              },
              "target": {
                "enum": [
                  "outcome",
                ]
              }
            },
            "required": ["type", "source", "target"],
            "additionalProperties": false
          },
          {
            "type" : "object",
            "properties": {
              "type": {
                "type" : "string",
                "enum": ["association-relationship"]
              },
              "source": {
                "enum": [
                  "outcome"
                ]
              },
              "target": {
                "enum": [
                  "value"
                ]
              }
            },
            "required": ["type", "source", "target"],
            "additionalProperties": false
          },
          {
            "type" : "object",
            "properties": {
              "type": {
                "type" : "string",
                "enum": ["assignment-relationship"]
              },
              "source": {
                "enum": [
                  "capability"
                ]
              },
              "target": {
                "enum": [
                  "resource"
                ]
              }
            },
            "required": ["type", "source", "target"],
            "additionalProperties": false
          },
          {
            "type" : "object",
            "properties": {
              "type": {
                "type" : "string",
                "enum": ["serving-relationship"]
              },
              "source": {
                "enum": [
                  "capability"
                ]
              },
              "target": {
                "enum": [
                  "value-stream"
                ]
              }
            },
            "required": ["type", "source", "target"],
